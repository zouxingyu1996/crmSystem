/* pages/book/book.wxss */

/* 日期选择 */
.picker_group {
  height: 85rpx;
  line-height: 85rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #888;
  border-bottom: 1rpx solid #efefef;
  border-top: 1rpx solid #efefef;
}

.picker_group picker {
  color: #64bff1;
  height: 55rpx;
  line-height: 55rpx;
  margin: 0 2%;
  padding: 0 2%;
  border: 1rpx solid #8d9396;
  border-radius: 30rpx;
  width: 270rpx;
}

.picker_group picker text{
  color: #b8bbbb;
}

/*主容器*/
.stepper {
  width:80px;
  height:26px;
  margin: 0 auto;
  border: 1px solid #ccc;
  border-radius: 3px;
  /* float: right; */
  /* margin-right: 40rpx; */
  margin-top: 23rpx;
}
/*加号和减号*/
.stepper text {
  float: left;
  width: 19px;
  line-height: 26px;
  text-align: center;
}
/*数值*/
.stepper input {
  width: 40px;
  height: 26px;
  float: left;
  margin: 0 auto;
  text-align: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
/*普通样式*/
.stepper .normal {
  color:black;
}
/*禁用样式*/
.stepper .disable {
  color: #ccc;
}


.row{
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #efefef;
}

.roomnum{
  border-top:10rpx solid rgb(240, 240, 240);
  border-bottom:10rpx solid rgb(240, 240, 240);
}

.row .left{
  width: 200rpx;
  text-align: right;
}

.row .right{
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20rpx;
}

.right radio{
    padding-right: 20rpx;
}

.remark{
  background-color:rgb(240, 240, 240);
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 10rpx;
}

  textarea{
   padding-left: 10rpx;
   width:100%;
   height: 120rpx;
   border-bottom: 1rpx solid #efefef;
   padding: 20rpx;
}

.footer{
  /* border: 1px solid red; */
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  /* 相对与浏览器的位置 */
  position: fixed;
  bottom:0;
}

.footer .price{
  width: 376rpx;
  float: left;
   height: 100rpx;
   line-height: 100rpx;
   text-align: center;
   color: #FFFFFF;
}

.footer .price button,
.footer .buy button{
  border-radius: 0;
  height: 100rpx;
  line-height: 100rpx;
  border-top-right-radius: 15rpx;
