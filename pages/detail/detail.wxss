/* pages/detail/detail.wxss */
@import '../../utils/icon.wxss';

/* 头部 */

.page {
  height: 100%;
  padding-bottom: 130rpx;
}
.status_header {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
}

.back {
  height: 90rpx;
  margin-left: 40rpx;
  margin-top: 10rpx;
  width: 90rpx;
  text-align: center;
}

.back .iconfont {
  color: #fff;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(0, 0, 0, .4);
  border-radius: 50%;
  font-size: 40rpx;
}
.detail_top {
  position: relative;
}

.detail_top image {
  width: 100%;
  height: 450rpx;
}

