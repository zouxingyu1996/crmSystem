/* pages/evaluate/evaluate.wxss */
@import '../../utils/icon.wxss';
.collect_tips{
  padding: 30rpx;
  color: #333;
  font-size: 28rpx;
}
.detail_box_comment{
  margin: 0 30rpx;
}
.detail_box_comment .item {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ebebeb;
}

.detail_box_comment .item .info {
  display: flex;
  align-items: center;
  height: 100rpx;
}

.detail_box_comment .item .info .photo {
  display: inline-block;
  font-size: 0;
  margin-right: 20rpx;
}

.detail_box_comment .item .info .photo image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  font-size: 0;
}

.detail_box_comment .item .info .name>text {
  display: block;
}

.detail_box_comment .item .info .name .star {
  display: block;
  color: #fda44f;
  vertical-align: middle;
}

.detail_box_comment .item .info .name .star text {
  vertical-align: middle;
}

.detail_box_comment .item .info .name .star .number {
  margin-left: 10rpx;
  font-weight: bold;
}

.detail_box_comment .item .text {
  line-height: 1.6rem;
  margin: 30rpx 0;
}

.detail_box_comment .img{
  overflow: hidden;
  margin-bottom: 20rpx;
  
}

.detail_box_comment .img .img_item{
  float: left;
  width: 33.3333%;
  box-sizing: border-box;
  padding: 5rpx;
}

.detail_box_comment .img .img_item image{
  width: 100%;
  height: 240rpx;
}

