/* pages/house/house.wxss */
@import '../../utils/icon.wxss';

/* 轮播图 */
.page {
  /* height: 736px; */
  overflow-y: hidden;
}

.status_header {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 99;
}

.back {
  height: 90rpx;
  margin-left: 40rpx;
  margin-top: 10rpx;
  width: 90rpx;
  text-align: center;
}

.back .iconfont {
  color: #fff;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(0, 0, 0, .4);
  border-radius: 50%;
  font-size: 40rpx;
}

swiper {
  height: 450rpx;
}

swiper .slide-image {
  width: 750rpx;
  height: 450rpx;
}

.wx-swiper-dots {
  position: relative;
}

.wx-swiper-dots.wx-swiper-dots-horizontal {
  margin-bottom: 0;
}

.hotel_box {
  padding: 0 30rpx 30rpx;
}

.hotel_box>.item {
  padding: 20rpx 0;
}

.item {
  overflow: hidden;
  border-bottom: 3rpx solid #e8e8e8;
}

.item .itemfl {
  width: 160rpx;
  /* height: 150rpx; */
  float: left;
}

.item .itemfl image {
  width: 100%;
  height: 150rpx;
  border-radius: 10rpx;
}

.item .itemfr {
  width: calc(100% - 180rpx);
  /* height: 150rpx; */
  margin-left: 20rpx;
  float: left;
  position: relative;
}

.item .itemfr .title {
  font-size: 34rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .itemfr .tips {
  font-size: 28rpx;
  color: #ff5f33;
  margin-bottom: 10rpx;
}

.item .itemfr .site {
  width: calc(100% - 140rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item .itemfr .site,
.item .itemfr .describe {
  font-size: 28rpx;
  color: #999;
}

.item .itemfr .tag {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #ff5f33;
}

.item .itemfr .tag text {
  font-size: 28rpx;
  border: 2rpx solid #ff5f33;
  border-radius: 4rpx;
  padding: 0 8rpx;
  margin-right: 10rpx;
}

.item .itemfr .price {
  position: absolute;
  right: 20rpx;
  bottom: 90rpx;
  font-size: 28rpx;
  color: #999;
}

.item .itemfr .price view {
  display: inline-block;
  font-size: 28rpx;
  color: #ff2e62;
}

.item .itemfr .price text {
  font-size: 34rpx;
}

.item .itemfr .btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 100rpx;
  color: white;
  text-align: center;
  background-image: linear-gradient(to right, #ff449d, #ff3068);
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}

.empty_tips {
  color: #666;
  padding: 30rpx;
}

.item .detail {
  width: 100%;
  height: 490rpx;
  margin-top: 160rpx;
  color: #666;
  font-size: 28rpx;
}

.detail_box_img {
  position: relative;
}

.detail_box_img .tips {
  margin: 20rpx 0;
}

.introduce {
  padding: 20rpx;
  line-height: 1.5;
  text-align: justify;
  color: #666;
}

view {
  display: block;
}

scroll-view {
  width: auto;
  white-space: nowrap;
}

scroll-view {
  display: block;
  width: 100%;
}

.detail_box_img .item:nth-last-child(1) {
  margin-right: 30rpx;
}

.detail_box_img .item:nth-child(1) {
  margin-left: 30rpx;
}

.detail_box_img .item {
  display: inline-block;
  width: 420rpx;
  height: 260rpx;
  margin-right: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

view {
  display: block;
}

.detail_box_img .item image {
  width: 420rpx;
  height: 260rpx;
}

.introduce image {
  width: 100% !important;
  height: 240px;
  display: inline-block;
  overflow: hidden;
  margin: 10rpx 0;
}

.switchTab {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 80rpx;
  border-bottom: 1rpx solid #efefef;
  padding: 6rpx 0;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  margin-top: -36rpx;
  z-index: 9;
  position: relative;
  background: #fff;
}

.switchTab>view {
  flex: 1;
  text-align: center;
  position: relative;
}

.active {
  color: red;
}

.active:after {
  content: ' ';
  position: absolute;
  height: 4rpx;
  width: 30rpx;
  background: #ff2e62;
  bottom: 10rpx;
  left: calc(50% - 15rpx);
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper swiper-item {
  height: 100%;
  /* overflow-y: scroll; */
}

/* 日期选择 */

.picker_group {
  height: 85rpx;
  line-height: 85rpx;
  justify-content: center;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #888;
  border-bottom: 1rpx solid #efefef;
  border-top: 1rpx solid #efefef;
}

.picker_group picker {
  color: #64bff1;
  height: 55rpx;
  line-height: 55rpx;
  margin: 0 2%;
  padding: 0 2%;
  border: 1rpx solid #8d9396;
  border-radius: 30rpx;
  width: 270rpx;
}

.picker_group picker text {
  color: #b8bbbb;
}

.detail_box_comment {
  position: relative;
  margin: 30rpx;
}

.detail_box_comment .tips {
  padding-top: 30rpx;
  border-top: 2rpx solid #ededed;
}

.detail_box_comment .tips .btn {
  display: block;
  float: right;
  /* width: 100rpx; */
  padding: 0 20rpx;
  color: white;
  text-align: center;
  background-image: linear-gradient(to right, #ff449d, #ff3068);
  border-radius: 30rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}

.active1 {
  color: red;
}

.detail_box_comment .classify {
  margin: 30rpx 0;
}

.detail_box_comment .text1 {
  padding: 30rpx 0;
  color: #999;
}

.detail_box_comment .classify .active {
  color: #ff2e62;
  border: 2rpx solid #ff2e62;
}

.detail_box_comment .classify text {
  border: 2rpx solid #f4f4f4;
  padding: 5rpx 20rpx;
  border-radius: 40rpx;
  margin-right: 20rpx;
}

.detail_box_comment .item {
  margin-bottom: 30rpx;
}

.detail_box_comment .item .info {
  display: flex;
  align-items: center;
  height: 100rpx;
}

.detail_box_comment .item .info .photo {
  display: inline-block;
  font-size: 0;
  margin-right: 20rpx;
}

.detail_box_comment .item .info .photo image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  font-size: 0;
}

.detail_box_comment .item .info .name>text {
  display: block;
}

.detail_box_comment .item .info .name .star {
  display: block;
  color: #fda44f;
  /* vertical-align: middle; */
}

.detail_box_comment .item .info .name .star text {
  vertical-align: middle;
}

.detail_box_comment .item .info .name .star .number {
  margin-left: 10rpx;
  font-weight: bold;
}

.detail_box_comment .item .text {
  line-height: 1.6rem;
  margin: 30rpx 0;
}

.detail_box_comment .img {
  overflow: hidden;
  margin-bottom: 20rpx;
}

.detail_box_comment .img .img_item {
  float: left;
  width: 33.3333%;
  box-sizing: border-box;
  padding: 5rpx;
}

.detail_box_comment .img .img_item image {
  width: 100%;
  height: 240rpx;
}

.detail_box_comment .item .time {
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.list {
  -webkit-overflow-scrolling: touch;
  position: absolute;
  width: 100%;
  height: calc(100% - 100rpx);
  white-space: inherit;
}

.tell {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #e91e63;
}

.tell .iconfont {
  font-size: 38rpx;
  color: #fff;
}