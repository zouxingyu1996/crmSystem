/* pages/feedback/feedback.wxss */
@import '../../utils/icon.wxss';

page {
  height: 100%;
  background-color: #f8f8f8;
}

.title {
  padding: 30rpx;
}

.title input {
  background-color: #fff;
  border: 2rpx solid #ebebeb;
  padding: 20rpx;
  border-radius: 6rpx;
}

.main {
  margin: 0 30rpx;
  background-color: #fff;
  border: 2rpx solid #ebebeb;
  padding: 20rpx;
  border-radius: 6rpx;
}

.main textarea {
  width: 100%;
  line-height: 1.5;
}

.main_text {
  overflow: hidden;
}

.cmbox_lenght {
  float: right;
  color: #666;
}

/* 上传图片 */

.cmbox_img {
  /* margin: 50rpx 20rpx; */
}

.sc-btn {
  text-align: center;
  /* box-shadow: #eee 0px 0px 20rpx 2rpx; */
  padding: 30rpx 0;
  /* margin: 30rpx; */
  width: 145rpx;
  float: left;
  border: 2rpx dashed #ebebeb;
}

.video-btn {
  text-align: center;
  /* box-shadow: #eee 0px 0px 20rpx 2rpx; */
  padding: 30rpx 0;
  /* margin: 30rpx; */
  width: 145rpx;
  border: 2rpx dashed #ebebeb;
}

.sc-btn1 {
  width: calc(25% - 10rpx);
  float: left;
  text-align: center;
  box-shadow: #eee 0px 0px 20rpx 2rpx;
  padding: 30rpx 0;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.iconfont {
  display: block;
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.iconfont-text {
  font-size: 30rpx;
  color: #666;
}

.q-image-wrap {
  width: auto;
  /* margin: 0 10rpx; */
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  float: left;
  position: relative;
}

.q-image-remover {
  position: absolute;
  top: -20rpx;
  right: -22rpx;
  font-size: 50rpx;
  color: #666;
}

.q-video-remover {
  position: absolute;
  top: -31rpx;
  right: -18rpx;
  font-size: 50rpx;
  color: #666;
}

.q-image-wrap image {
  width: 145rpx;
  height: 145rpx;
}

/* .q-image-wrap:nth-child(1){
  margin-left: 0;
} */

/* .q-image-wrap:nth-last-child(1){
  margin-right: 0;
} */

.question-images {
  overflow: hidden;
  /* padding: 30rpx; */
  padding: 20rpx 0;
}

.contact {
  margin: 30rpx 30rpx 80rpx;
}

.contact input {
  background-color: #fff;
  border: 2rpx solid #ebebeb;
  padding: 20rpx;
  border-radius: 6rpx;
}

.submit {
  margin: 0 30rpx 50rpx;
}

.submit a {
  display: inline-block;
  width: 100%;
  line-height: 80rpx;
  background-image: linear-gradient(to right, #ff449d, #ff3068);
  text-align: center;
  color: #fff;
  border-radius: 20rpx;
}

.myVideo {
  position: relative;
}

#myVideo {
  width: 100%;
  height: 320rpx;
}
