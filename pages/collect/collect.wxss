/* pages/collect/collect.wxss */
.collect_tips{
  padding: 30rpx;
  color: #333;
  font-size: 28rpx;
}
.collect_box{
  margin: 0 30rpx;
}
.hot_sale_item {
  overflow: hidden;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #ededed;
  margin-bottom: 50rpx;
  position: relative;
}

.hot_sale_itemfl {
  width: 160rpx;
  float: left;
  font-size: 0;
}

.hot_sale_itemfl image {
  width: 100%;
  height: 240rpx;
  border-radius: 20rpx;
}

.hot_sale_itemfr {
  float: left;
  width: calc(100% - 180rpx);
  margin-left: 20rpx;
  color: #666;
}

.hot_sale_text {
  float: left;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot_sale_text .bt {
  color: #000;
  font-size: 36rpx;
}

.hot_sale_text .grade {
  margin: 20rpx 0;
}

.hot_sale_text .grade text {
  color: #faa54f;
  font-weight: bold;
}

.hot_sale_text .price {
  margin-bottom: 20rpx;
}

.hot_sale_text .cite {
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot_sale_text .price text {
  color: #faa54f;
  font-weight: bold;
}
.hot_sale_time{
  position: absolute;
  bottom: 30rpx;
  left: 180rpx;
  color: #666;
}