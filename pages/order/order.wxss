/* pages/order/order.wxss */

page {
  background: #434448;
}

.page {
  padding: 0 20rpx;
}

/* 头部 */

.order_top {
  color: #fff;
  text-align: center;
}

.order_top .tips {
  margin: 4rpx 0 30rpx;
  font-size: 24rpx;
}

.order_top .btn text {
  font-size: 28rpx;
  display: inline-block;
  border: 2rpx solid #fff;
  padding: 4rpx 50rpx;
  border-radius: 40rpx;
}

.order_top .btn text:nth-child(1) {
  margin-right: 15rpx;
}

.order_top .btn text:nth-last-child(1) {
  margin-left: 15rpx;
}

/* 盒子 */

.order_box {
  background: #fff;
  width: 100%;
  border-radius: 10rpx;
  margin: 50rpx 0;
  /* padding: 30rpx; */
  box-sizing: border-box;
}

.order_box_top {
  overflow: hidden;
  /* border-bottom: 2rpx dashed #ebebeb; */
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
}

.split-line {
  height: 2rpx;
  position: relative;
  border-bottom: 2rpx dashed #ebebeb;
}

.split-line:after, .split-line:before {
  content: "";
  display: block;
  position: absolute;
  width: 24rpx;
  height: 12rpx;
  background: #434448;
}

.split-line:before {
  bottom: -4rpx;
  left: -10rpx;
  transform: rotate(-90deg);
  border-radius: 0 0 24rpx 24rpx;
}

.split-line:after {
  bottom: -4rpx;
  right: -10rpx;
  transform: rotate(-90deg);
  border-radius: 24rpx 24rpx 0 0;
}

.order_box_top .fl {
  float: left;
  width: calc(100% - 190rpx);
}

.order_box_top .fl .name {
  font-size: 38rpx;
  color: #000;
}

.order_box_top .fl .site {
  font-size: 28rpx;
  color: #333;
  margin-top: 30rpx;
}

.order_box_top .fl .total {
  font-size: 28rpx;
  color: #333;
  margin-top: 30rpx;
}

.order_box_top .fr {
  width: 160rpx;
  float: right;
}

.order_box_top .fr image {
  width: 160rpx;
  height: 220rpx;
  margin-top: 20rpx;
}

.order_box_code, .order_box_sum, .order_box_notice {
  padding: 30rpx;
}

.order_box_code .tips, .order_box_sum .tips, .order_box_notice .tips {
  font-size: 38rpx;
  color: #000;
}

.order_box_code .img {
  margin: 50rpx 0;
  text-align: center;
}

.order_box_code .img image {
  width: 300rpx;
  height: 300rpx;
  display: block;
  margin: 0 auto;
}

.order_box_code .img text {
  color: #999;
  display: inline-block;
  margin: 50rpx auto 0;
  border: 2rpx solid #999;
  padding: 10rpx 40rpx;
  border-radius: 10rpx;
}

.order_box_sum {
  border-bottom: 2rpx dashed #ebebeb;
}

.order_box_sum .tips text {
  float: right;
}

.order_box_sum .box, .order_box_notice .box {
  color: #666;
  font-size: 30rpx;
  margin-top: 30rpx;
}

.order_box_sum .box view, .order_box_notice .box view {
  margin-bottom: 20rpx;
}

/* 自定义弹窗样式 */

.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 18;
  /* color: #fff; */
}

.modal-dialog {
  overflow: hidden;
  z-index: 19;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 100rpx;
}

.modal-title {
  line-height: 80rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-input {
  /* display: flex; */
  background: #fff;
  border: 2rpx solid #ebebeb;
  /* border-radius: 4rpx; */
  font-size: 30rpx;
  padding: 30rpx;
}

.modal-input view {
  margin-bottom: 10rpx;
}

.modal-input view:nth-last-child(1) {
  margin-bottom: 0;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  font-size: 34rpx;
  line-height: 86rpx;
}

.modal-footer-tips {
  width: 100%;
  text-align: center;
}

.modal-footer-tips view {
  display: inline-block;
  width: 50%;
  box-sizing: border-box;
}

.btn-cancel {
  border-right: 2rpx solid #ebebeb;
}

.btn-confirm {
  color: #568;
}

